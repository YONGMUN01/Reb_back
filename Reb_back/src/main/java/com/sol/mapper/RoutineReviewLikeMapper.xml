<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="routineReviewLike">
	<select id="select" parameterType="int" resultType="int">
		select count(*) from TBL_ROUTINE_REVIEW_LIKE
		where MEMBER_NUMBER = #{memberNumber}
	</select>
	
	<insert id="insert" parameterType="RoutineReviewLikeDTO">	
		INSERT INTO TBL_ROUTINE_REVIEW_LIKE (ROUTINE_REVIEW_NUMBER, MEMBER_NUMBER) 
			VALUES (#{routineReviewNumber}, #{memberNumber});
	</insert>
	
	<delete id="delete" parameterType="int">
		delete from TBL_ROUTINE_REVIEW_LIKE
		where MEMBER_NUMBER = #{memberNumber}
	</delete>
	
	<select id="getCount" parameterType="int">
		select count(routineReviewNumber) from TBL_ROUTINE_REVIEW_LIKE
		where ROUTINE_REVIEW_NUMBER = #{routineReviewNumber}
	</select>
</mapper>